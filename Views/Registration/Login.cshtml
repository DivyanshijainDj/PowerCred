@model PowerCred.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="mb-4 text-center">User Login</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid gap-2">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <!-- Sign Up Link -->
                <div class="mt-3 text-center">
                    <p>Don't have an account? <a asp-action="Create" asp-controller="Registration">Sign up here</a></p>
                </div>

                <div class="mt-3 text-danger">
                    @ViewBag.LoginError
                </div>
            </form>
        </div>
    </div>
</div>
