@model PowerCred.Models.Users

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4 text-center">User Registration Form</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Pwd" class="form-label"></label>
                    <input asp-for="Pwd" class="form-control" type="password" />
                    <span asp-validation-for="Pwd" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="Confirmpwd" class="form-label"></label>
                    <input asp-for="Confirmpwd" class="form-control" type="password" />
                    <span asp-validation-for="Confirmpwd" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Gender -->
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <div class="form-check">
                        <input type="radio" id="genderMale" name="Gender" value="M" class="form-check-input" />
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" id="genderFemale" name="Gender" value="F" class="form-check-input" />
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>


                <!-- Submit Button -->
                <div class="d-grid gap-2">
                    <input type="submit" value="Save User Details" class="btn btn-primary" />
                </div>
                <div class="mt-3 text-center">
                    <p>Already have an account? <a asp-action="Login" asp-controller="Registration">Log in here</a></p>
                </div>

                <div class="mt-3 text-success">
                    <b>@ViewBag.message</b>
                </div>
            </form>
        </div>
    </div>

   
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
