@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .hero-section {
            background-image: url('https://via.placeholder.com/1500x1000/87CEEB/000000?text=PowerCred');
            background-size: cover;
            background-position: center;
           
            color: black;
            display: flex;
            justify-content: center;
            align-items: center;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }
        .hero-section h1 {
            font-size: 4rem;
        }
        .hero-section .btn {
            font-size: 1.2rem;
            padding: 10px 30px;
            background-color: #007bff;
            border: none;
            color: white;
            border-radius: 50px;
            transition: background-color 0.3s ease;
        }
        .hero-section .btn:hover {
            background-color: #0056b3;
        }
        .feature-icons {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 30px;
        }
        .feature-icon {
            text-align: center;
            font-size: 2rem;
            color: #007bff;
            transition: transform 0.3s ease;
        }
        .feature-icon:hover {
            transform: scale(1.2);
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero-section">
        <div>
            <h1 class="display-4">Welcome to PowerCred Application</h1>
            <p class="lead">Your reliable platform for task management and productivity</p>
        </div>
    </div>

    <!-- Features Section -->
    <div id="features" class="container py-5">
        <h2 class="text-center mb-4">Built in Tech-Stack</h2>
        <div class="feature-icons">
            <div class="feature-icon">
                <i class="bi bi-laptop" style="font-size: 50px;"></i>
                <p>ASP .NET MVC - C#</p>
            </div>
            <div class="feature-icon">
                <i class="bi bi-cloud" style="font-size: 50px;"></i>
                <p>Razor Pages</p>
            </div>
            <div class="feature-icon">
                <i class="bi bi-shield-lock" style="font-size: 50px;"></i>
                <p>Microsoft SQL Server</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

</body>
</html>
